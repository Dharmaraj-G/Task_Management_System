<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/morrow"
    tools:context=".UpdateCourseActivity">

    <!--Edit text to enter course name-->
    <EditText
        android:id="@+id/idEdtCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Task Name"
        android:textStyle="bold" />

    <!--edit text to enter course duration-->
    <EditText
        android:id="@+id/idEdtCourseDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Your Rollno (OR) Name"
        android:textStyle="bold" />

    <!--edit text to display course tracks-->
    <EditText
        android:id="@+id/idEdtCourseTracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Task Completed or Not..?\nType Yes if Completed\nType No if Not Completed"
        android:textStyle="bold" />

    <!--edit text for course description-->

    <EditText
        android:id="@+id/idEdtCourseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Reporter Number"
        android:textStyle="bold" />

    <!--button for updating course-->
    <ImageView
        android:id="@+id/imager"
        android:layout_width="96dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/caller" />

    <Button
        android:id="@+id/idBtnUpdateCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#00FF00"
        android:drawableLeft="@drawable/ic_baseline_system_update_alt_24"
        android:text="Update Task"
        android:textAllCaps="true" />

    <!--Button for deleting your course to database-->

    <Button
        android:id="@+id/idBtnDeleteCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/teal_700"
        android:drawableLeft="@drawable/ic_baseline_delete_sweep_24"
        android:text="Delete Task"
        android:textAllCaps="true"
        android:visibility="visible" />

    <Button
        android:id="@+id/buttoned"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:drawableLeft="@drawable/ic_baseline_chevron_left_24"
        android:src="@drawable/backside"

        android:text="BACK" />

</LinearLayout>